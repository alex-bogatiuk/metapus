# Application
APP_ENV=development
APP_PORT=8080
APP_NAME=metapus

# Database
DATABASE_URL=postgres://metapus:metapus@localhost:5432/metapus?sslmode=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Multi-tenancy
ISOLATION_MODE=shared
# For dedicated mode:
# ISOLATION_MODE=dedicated
# DEDICATED_TENANT_ID=tenant-uuid-here

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=720h

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FEATURE_NEW_POSTING=false
FEATURE_ASYNC_POSTING=false

# Audit
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=90

# Worker
OUTBOX_BATCH_SIZE=100
OUTBOX_POLL_INTERVAL=500ms
